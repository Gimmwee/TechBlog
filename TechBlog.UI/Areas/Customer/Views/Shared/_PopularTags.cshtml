@using TechBlog.Core.Models
@using TechBlog.Core.Repository.UnitOfWork
@inject IUnitOfWork unitOfWork
@{
    IEnumerable<Tag> tagsList = unitOfWork.TagRepository.GetAll().OrderByDescending(t => t.Count);
}

@foreach (var item in tagsList)
{
    <a style="text-decoration:underline" asp-action="Details" asp-route-id="@item.TagId">#@item.Name</a>
    <span>&nbsp&nbsp</span>
}