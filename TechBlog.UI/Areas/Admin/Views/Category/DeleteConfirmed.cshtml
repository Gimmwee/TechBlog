@model TechBlog.Core.Models.Category

<h2>Confirm Deletion</h2>
<p>Are you sure you want to delete the category "@Model.Name" and all its associated posts?</p>

@using (Html.BeginForm("DeleteWithPosts", "Category", new { id = Model.CategoryId }, FormMethod.Post))
{
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Index", "Category")" class="btn btn-default">Cancel</a>
}
